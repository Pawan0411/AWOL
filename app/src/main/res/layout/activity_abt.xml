<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:paddingHorizontal="5dp"
    android:gravity="center_horizontal"
    tools:context="com.codex_iter.www.awol.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="90dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/circ"/>
    <TextView
        android:id="@+id/ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Ver. 4.0"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="7dp"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="DISCLAIMER"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="7dp"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/para"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:text="@string/abtAPP"
        android:textColor="#aaaaaa"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="9dp"
        android:textSize="13dp"
        />
    <TextView
        android:id="@+id/abt_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="ABOUT ME"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/hey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/abtME"
        android:textColor="#aaaaaa"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="7dp"
        android:textSize="13dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/fb"
            />
        <ImageView
            android:id="@+id/git"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/git"
            android:layout_marginHorizontal="4dp"
            />
        <ImageView
            android:id="@+id/gmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/gmail"
            android:layout_marginHorizontal="4dp"
            />
</LinearLayout>
    <TextView
        android:id="@+id/cdx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MADE WITH  ðŸ’š  AS A PROJECT FOR CODEX"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/edit"
        android:textSize="16dp"
        />
</LinearLayout>